<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/child_name_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/child_name"
        app:layout_constraintBottom_toBottomOf="@id/child_name_edit"
        app:layout_constraintEnd_toStartOf="@id/child_name_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/child_name_edit" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/child_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/child_name_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_age_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/child_age"
        app:layout_constraintBottom_toBottomOf="@id/child_age_edit"
        app:layout_constraintEnd_toStartOf="@id/child_age_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/child_age_edit" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/child_age_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/child_age_text"
        app:layout_constraintTop_toBottomOf="@id/child_name_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>